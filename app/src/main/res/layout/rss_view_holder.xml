<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_4"
    app:cardBackgroundColor="@color/black_10"
    app:cardCornerRadius="@dimen/dp_24"
    app:cardElevation="0px">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="@dimen/dp_16">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeRounded8dp"
            app:srcCompat="@color/black_10" />


        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            app:indicatorInset="0px"
            app:indicatorSize="@dimen/dp_24"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail"
            app:layout_constraintRight_toRightOf="@id/thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:trackColor="#4CAF50"
            app:trackCornerRadius="@dimen/dp_2"
            app:trackThickness="@dimen/dp_4"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintLeft_toRightOf="@id/thumbnail"
            app:layout_constraintRight_toLeftOf="@id/g_count"
            app:layout_constraintTop_toTopOf="@+id/thumbnail"
            tools:text="Title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/g_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/green_60"
            app:cardCornerRadius="@dimen/dp_16"
            app:cardElevation="0px"
            android:background="?selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/title">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_8"
                tools:text="@string/rss_count_available_or_unread" />
        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/g_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thumbnail"
            android:gravity="right"
            tools:visibility="visible">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_share"
                    android:tooltipText="Share or Hold &amp; Copy"
                    app:layout_constraintEnd_toStartOf="@+id/bt_sync"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail"
                    tools:targetApi="o" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bt_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_cloud_sync"
                    android:tooltipText="Sync latest news"
                    app:layout_constraintEnd_toStartOf="@+id/bt_mute"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail"
                    tools:targetApi="o" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bt_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_sync_disabled"
                    android:tooltipText="Exclude from auto sync"
                    app:layout_constraintEnd_toStartOf="@+id/bt_clean"
                    app:layout_constraintTop_toTopOf="@id/bt_sync"
                    tools:targetApi="o" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bt_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_clear"
                    android:tooltipText="Clean local data"
                    app:layout_constraintRight_toLeftOf="@id/bt_delete"
                    app:layout_constraintTop_toTopOf="@id/bt_sync"
                    tools:targetApi="o" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_forever"
                    android:tooltipText="Detele all related"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/bt_sync"
                    tools:targetApi="o" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>